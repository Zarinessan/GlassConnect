<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.zarinessan.glassconnect" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".GlassConnectApplication"
        android:screenOrientation="portrait"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Upload"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_upload"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.zarinessan.glassconnect.MainActivity" />
        </activity>
        <activity
            android:name=".GetRowInfo"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_get_row_info"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.zarinessan.glassconnect.MainActivity" />
        </activity>
        <activity
            android:name=".GetColumnInfo"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_get_column_info"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.zarinessan.glassconnect.MainActivity" />
        </activity>
        <activity
            android:name=".SignIn"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_sign_in"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.zarinessan.glassconnect.MainActivity" />
        </activity>
        <activity
            android:name=".SignUp"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_sign_up"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.zarinessan.glassconnect.MainActivity" />
        </activity>
    </application>

</manifest>
