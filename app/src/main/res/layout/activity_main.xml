<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView2"
        android:layout_marginTop="65dp"
        android:text="@string/app_name"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Example"
        android:id="@+id/buttonUpload"
        android:onClick="upload"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Row"
        android:id="@+id/buttonRow"
        android:layout_marginTop="63dp"
        android:layout_below="@+id/buttonUpload"
        android:layout_centerHorizontal="true"
        android:onClick="getRow"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Column"
        android:id="@+id/buttonColumn"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/buttonRow"
        android:layout_centerHorizontal="true"
        android:onClick="getColumn"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:id="@+id/signB"
        android:layout_marginTop="45dp"
        android:onClick="signUp"
        android:layout_below="@+id/textView2"
        android:layout_toLeftOf="@+id/buttonRow"
        android:layout_toStartOf="@+id/buttonRow"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/loginB"
        android:layout_alignTop="@+id/signB"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:onClick="signIn"/>

</RelativeLayout>
