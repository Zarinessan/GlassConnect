<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.zarinessan.glassconnect.SignIn"
    android:id="@+id/signIn">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Here_signIn" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userInE"
        android:layout_below="@+id/Here_signIn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="114dp"
        android:inputType="text"
        android:hint="Type your Username."/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/passInE"
        android:layout_below="@+id/userInE"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:inputType="text"
        android:hint="Type your Password."/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login "
        android:id="@+id/loginB"
        android:layout_below="@+id/passInE"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        />

</RelativeLayout>
